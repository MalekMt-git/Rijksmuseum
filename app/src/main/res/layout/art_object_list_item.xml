<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/main_art_picture"
        android:layout_width="238dp"
        android:layout_height="202dp"
        tools:layout_editor_absoluteX="0dp"
        android:padding="10dp"
        tools:layout_editor_absoluteY="0dp"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/main_article_picture" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/artist_name"
            android:textColor="@color/background_primary"/>
        <TextView
            android:id="@+id/art_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/art_name"
            android:textColor="@color/status_bar_light"/>
    </LinearLayout>
</LinearLayout>
